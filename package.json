{
  "name": "meds-new",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "tsc && vite build && electron-builder",
    "type-check": "tsc",
    "tailwind:dev": "tailwindcss -i ./src/index.css -o ./dist/output.css --watch",
    "tailwind:build": "tailwindcss -i ./src/index.css -o ./dist/output.css --minify"
  },
  "main": "electron/main.ts",
  "build": {
    "appId": "com.medical.records",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
      "@vitejs/plugin-react": "^4.3.3",
      "pocketbase": "^0.21.5",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-router-dom": "^6.28.0"
    },
    "devDependencies": {
      "@types/node": "^22.9.0",
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1",
      "concurrently": "^9.1.0",
      "electron": "^33.2.0",
      "electron-builder": "^25.1.8",
      "typescript": "^5.6.3",
      "vite": "^5.4.10",
      "wait-on": "^8.0.1"
    }
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.4.48",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "pocketbase": "^0.21.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  }
}
